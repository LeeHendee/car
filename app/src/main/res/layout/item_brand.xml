<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pager_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:layout_width="4dp"
            android:layout_height="12dp"
            android:background="@color/blue1"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/tv_brand_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="米其林轮胎"
            android:textColor="@color/text_note_color"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/tv_go_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去选购  >>"
            android:layout_alignParentRight="true"
            android:textColor="@color/blue1"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_brand_item_bg">

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="全球轮胎科技领导者。致力于轮胎科技的创新与研发，为满足各种驾驶需求。全国零售商为你提供专业服务。"
            android:padding="10dp"
            android:maxLines="5"
            android:ellipsize="end" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_product_one"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:src="@drawable/icon_cheyizhan"
                android:layout_margin="5dp" />

            <ImageView
                android:id="@+id/iv_product_two"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:src="@drawable/icon_cheyizhan"
                android:layout_margin="5dp" />

            <ImageView
                android:id="@+id/iv_product_three"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:src="@drawable/icon_cheyizhan"
                android:layout_margin="5dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>