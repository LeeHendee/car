<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_product_detail"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <include layout="@layout/product_title_bar" />

    <TextView
        android:id="@+id/tv_product_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/vp_product_detail"
        android:maxLines="3"
        android:padding="10dp"/>


    <RelativeLayout
        android:id="@+id/rl_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_product_description"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <TextView
            android:id="@+id/tv_sale_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥999"
            android:textSize="20sp"
            android:textColor="@color/orange_txt"/>

        <TextView
            android:id="@+id/tv_good_reviews_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="好评率：98%"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_sold_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="已售：300"
        android:layout_below="@id/rl_price"/>

</RelativeLayout>