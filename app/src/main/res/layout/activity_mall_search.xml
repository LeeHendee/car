<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:scaleType="center"
            android:src="@drawable/tm_actionbar_btn_back" />

        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:layout_weight="5"
            android:background="@drawable/search_bar_bg_gray"
            android:drawableLeft="@drawable/icon_search"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:hint="轮胎"
            android:textColorHint="@color/text_note_color"
            android:textColor="@color/text_common_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:text="搜索" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_common_color" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="热门搜索"
        android:textColor="@color/text_note_color"
        android:textSize="12sp" />

    <com.example.gtercn.car.mall.view.custom_view.FlowLayout
        android:id="@+id/fl_hot_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="最近搜索"
            android:textColor="@color/text_note_color"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/ll_clear_history"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:gravity="right|center_vertical">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_delete" />

        </LinearLayout>
    </RelativeLayout>

    <com.example.gtercn.car.mall.view.custom_view.FlowLayout
        android:id="@+id/fl_history_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

</LinearLayout>